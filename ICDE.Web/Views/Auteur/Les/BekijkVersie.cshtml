@using ICDE.Lib.Dto.Lessen
@model LesDto
@{
    ViewData["Title"] = "Bekijk les versie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lessen</h1>

<a href="/auteur/les/delete/@Model.GroupId/@Model.VersieNummer">Verwijder versie</a>
<a href="/auteur/les/@Model.GroupId/kopie/@Model.VersieNummer">Maak kopie van versie</a>

<hr />
<div class="row">
    <div class="col-md-6">
        <h2> Maak les </h2>
        <form method="post" enctype="multipart/form-data" asp-action="UpdateLes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="GroupId" class="form-control" value="@Model.GroupId" hidden />
            <div class="form-group">
                <label name="Naam" class="control-label">Naam</label>
                <input name="Naam" class="form-control" value="@Model.Naam" readonly />
            </div>
            <div class="form-group">
                <label name="Beschrijving" class="control-label">Beschrijving</label>
                <input name="Beschrijving" class="form-control" value="@Model.Beschrijving" readonly />
            </div>
        </form>
    </div>
</div>

