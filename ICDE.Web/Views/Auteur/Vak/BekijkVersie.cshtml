@using ICDE.Lib.Dto.Vak
@model VakDto
@{
    ViewData["Title"] = "Bekijk vak versie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bekijk vak versie</h1>

<a href="/auteur/vak/delete/@Model.GroupId/@Model.VersieNummer">Verwijder versie</a>
<a href="/auteur/vak/@Model.GroupId/kopie/@Model.VersieNummer">Maak kopie</a>

<hr />
<div class="row">
    <div class="col-md-6">
        <h2> Vak </h2>
        <form method="post" enctype="multipart/form-data" asp-action="UpdateVak">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="GroupId" class="form-control" value="@Model.GroupId" hidden />
            <div class="form-group">
                <label name="Naam" class="control-label">Naam</label>
                <input name="Naam" class="form-control" value="@Model.Naam" />
            </div>
            <div class="form-group">
                <label name="Beschrijving" class="control-label">Beschrijving</label>
                <input name="Beschrijving" class="form-control" value="@Model.Beschrijving" />
            </div>
            <button type="submit">Maak</button>
        </form>
    </div>
</div>

